<?xml version="1.0" encoding="utf-8"?>
<!-- Grid item based on original app's adapter_grid_item.xml -->
<androidx.cardview.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/grid_item_margin"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/background_card">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Post Preview Image -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:minHeight="100dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/cd_post_image"
            tools:background="@color/background_card" />

        <!-- Selection check indicator (center) -->
        <ImageView
            android:id="@+id/imgSelected"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_check_circle"
            android:alpha="0.9"
            android:visibility="gone"
            android:contentDescription="@string/cd_selected"
            tools:visibility="visible" />

        <!-- Video/GIF indicator (top right) -->
        <ImageView
            android:id="@+id/imgTypeIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:background="#59080808"
            android:padding="@dimen/grid_item_margin"
            android:visibility="gone"
            android:alpha="0.8"
            tools:src="@drawable/ic_video"
            tools:visibility="visible" />

        <!-- Score/Info overlay (bottom) -->
        <TextView
            android:id="@+id/txtInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#640f1743"
            android:textColor="@android:color/white"
            android:textSize="@dimen/grid_item_info_text_size"
            android:textStyle="bold"
            android:paddingStart="@dimen/grid_item_info_padding"
            android:paddingEnd="@dimen/grid_item_info_padding"
            android:gravity="center"
            android:visibility="gone"
            tools:text="â†‘95"
            tools:visibility="visible" />

        <!-- Rating indicator line (bottom) -->
        <View
            android:id="@+id/viewRating"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="bottom"
            tools:background="@color/rating_safe" />

        <!-- Overlay for viewed/selected posts -->
        <FrameLayout
            android:id="@+id/fLOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#40000000"
            android:visibility="gone" />

    </FrameLayout>

</androidx.cardview.widget.CardView>
