<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/background_card"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:contentPadding="12dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Artist and position row -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/tag_artist"
                android:textSize="16sp"
                android:focusable="true"
                android:clickable="true"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="40dp" />

            <TextView
                android:id="@+id/txtPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <!-- Rating, ID, Score row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Rating Explicit -->
            <TextView
                android:id="@+id/txtRatingE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E"
                android:textStyle="bold"
                android:textColor="@color/rating_explicit"
                android:visibility="gone" />

            <!-- Rating Questionable -->
            <TextView
                android:id="@+id/txtRatingQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q"
                android:textStyle="bold"
                android:textColor="@color/rating_questionable"
                android:visibility="gone" />

            <!-- Rating Safe -->
            <TextView
                android:id="@+id/txtRatingS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:textStyle="bold"
                android:textColor="@color/rating_safe"
                android:visibility="gone" />

            <!-- Post ID -->
            <TextView
                android:id="@+id/txtPostId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/text_secondary"
                android:textIsSelectable="true" />

            <View
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <!-- Upvotes -->
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_arrow_up"
                app:tint="@color/score_positive" />

            <TextView
                android:id="@+id/txtScoreUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/score_positive"
                android:textSize="12sp" />

            <View
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <!-- Downvotes -->
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_arrow_down"
                app:tint="@color/score_negative" />

            <TextView
                android:id="@+id/txtScoreDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/score_negative"
                android:textSize="12sp" />

            <View
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <!-- Favorites -->
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_favorite_filled"
                app:tint="@color/favorite_color" />

            <TextView
                android:id="@+id/txtFavCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/favorite_color"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- File info row (size, resolution, etc) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Resolution -->
            <TextView
                android:id="@+id/txtResolution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <View
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <!-- File size -->
            <TextView
                android:id="@+id/txtFileSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <View
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <!-- File type -->
            <TextView
                android:id="@+id/txtFileType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:textAllCaps="true" />

        </LinearLayout>

        <!-- Date -->
        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

        <!-- Sources (expandable) -->
        <LinearLayout
            android:id="@+id/layoutSources"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/post_sources"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/text_primary" />

            <ImageView
                android:id="@+id/imgSourcesExpand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_expand_more"
                app:tint="@color/text_primary" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutSourcesList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
